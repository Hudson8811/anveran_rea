section.filters__section
    .container
        .filters__row
            .filters
                span.f-step__types-input Все типы недвижимости

                ul.f-step__types-content
                    li.f-step__types-item.is--active Все типы недвижимости
                    li.f-step__types-item Апартаменты и Квартиры
                    li.f-step__types-item Таунхаусы и Бунгало
                    li.f-step__types-item Виллы и дома
                    li.f-step__types-item Все типы недвижимости
            
            .filters
                span.f-step__types-input Цена

                ul.f-step__types-content
                    li.f-step__types-item.is--active Цена
                    li.f-step__types-item Цена1
                    li.f-step__types-item Цена2
                    li.f-step__types-item Цена3
            
            .filters
                span.f-step__types-input Спальни и санузлы

