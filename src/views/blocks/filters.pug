                            label.filters__drop 
                                input(type="radio", name="1")
                                span До 100 м.
                            label.filters__drop 
                                input(type="radio", name="1")
                                span До 200 м.
                            label.filters__drop 
                                input(type="radio", name="1")
                                span До 500 м.
                            label.filters__drop 
                                input(type="radio", name="1")
                                span Не важно
                    
                    .filters__drop-wrapper 
                        .filters__drop-title Вид из окна
                        .filters__drop-row
                            label.filters__drop.circle 
                                input(type="radio", name="2")
                                span Море
                            label.filters__drop.circle 
                                input(type="radio", name="2")
                                span Горы
                            label.filters__drop.circle 
                                input(type="radio", name="2")
                                span Город
                            label.filters__drop.circle 
                                input(type="radio", name="2")
                                span Не важно
                    
                    .filters__drop-wrapper 
                        .filters__drop-title Дополнительно
                        .filters__drop-row
                            label.filters__drop.circle 
                                input(type="checkbox", name="3")
