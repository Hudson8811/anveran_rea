                            label.filters__drop.circle 
                                input(type="checkbox", name="3")
                                span Интернет
                            label.filters__drop.circle 
                                input(type="checkbox", name="3")
                                span ТВ
                            label.filters__drop.circle 
                                input(type="checkbox", name="3")
                                span Сад
                            label.filters__drop.circle 
                                input(type="checkbox", name="3")
                                span Терраса
                    
                    .filters__drop-wrapper
                        button.filters__drop-remove Сбросить фильтры
                        +black-button('Показать 14 912 вариантов')
            
            label.filters.filters__search
                input.filters__search-input(type="text")
                a(href="#") Регион 
            
            +blue-btn('Поиск')
    
        .filters__row.filters__tag-row
            .filters__tag Расстояние до моря до 500 м.
                span.filters__tag-close.h-btn
            .filters__tag Бассейн
                span.filters__tag-close.h-btn
            
